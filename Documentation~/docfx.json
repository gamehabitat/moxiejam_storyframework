{
  "metadata": [
      {
          "src": [
              {
                  "src": "..",
                  "files": [
                      "Editor/**/*.cs",
                      "Runtime/**/*.cs"
                  ]
              }
          ],
          "globalNamespaceId": "Global",
          "filter": "filterConfig.yml",
          "dest": "api"
      }
  ],
  "build": {
      "globalMetadata": {
          "_appTitle": "MoxieJam story framework documentation",
          "_appFooter": "MoxieJam story framework documentation",
          "_enableSearch": true,
          "template": [ "default", "templates/unity" ]
      },
      "content": [
          {
              "files": [
                  "toc.yml",
                  "index.md"
              ]
          },
          {
              "src": "api",
              "files": [
                  "*.yml"
              ],
              "dest": "api"
          },
          {
              "src": "manual",
              "files": [
                  "toc.yml",
                  "*.md",
                  "components/toc.yml",
                  "components/**.md",
                  "components/**/toc.yml",
                  "components/**/**.md"
              ],
              "dest": "manual"
          }
      ],
      "overwrite": [
          {
              "src": "..",
              "files": [
                  "Editor/**/*.md",
                  "Runtime/**/*.md"
              ]
          }
      ],
      "resource": [
          {
              "files": [
                  "resources/**/*"
              ]
          }
      ],
      "sitemap": {
          "baseUrl": "https://gamehabitat.github.io/moxiejam_storyframework/",
          "changefreq": "weekly",
          "fileOptions": {
              "api/*": {
                  "changefreq": "daily"
              }
          }
      },
      "xref": [
          "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
      ],
      "xrefService": [
          "https://xref.docs.microsoft.com/query?uid={uid}"
      ],
      "dest": "../_site"
  }
}